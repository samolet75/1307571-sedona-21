{
  "name": "sedona-21",
  "private": true,
  "description": "Личный проект «Седона» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "autoprefixer": "^10.4.4",
    "browser-sync": "2.26.13",
    "gulp": "^4.0.2",
    "gulp-less": "4.0.1",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.0",
    "gulp-sourcemaps": "3.0.0",
    "postcss": "^8.1.7",
    "postcss-csso": "^6.0.0",
    "stylelint": "^14.0.0",
    "stylelint-config-htmlacademy": "^0.1.12"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/less/**/*.less\" --custom-syntax less",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp styles",
    "start": "gulp"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "engines": {
    "node": "14.15.0"
  },
  "dependencies": {
    "npm": "^6.14.4",
    "postcss-markdown": "^1.2.0"
  }
